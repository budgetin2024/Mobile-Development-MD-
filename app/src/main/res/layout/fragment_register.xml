<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterFragment">

    <!-- ImageView untuk gambar background -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom|center"
        android:src="@drawable/purple"
        android:scaleType="centerCrop" />

    <!-- ImageView untuk gambar atas (gambar lainnya) -->
    <ImageView
        android:id="@+id/imageOnboarding1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/img" />

    <!-- LinearLayout untuk form input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title Sign Up -->
        <TextView
            android:id="@+id/sign_up_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:text="Sign Up"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <!-- Input Username dengan Border -->
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:hint="Username"
            android:inputType="text"
            android:padding="12dp" />

        <!-- Input Email dengan Border -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_border"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Input Password dengan Border -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/eye"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Tombol Sign Up -->
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:background="@drawable/btn_sign_up_background"
            android:layout_gravity="center" />

        <!-- Link to Register Page -->
        <TextView
            android:id="@+id/login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="already have an account? Sign In"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_gravity="center" />

    </LinearLayout>
</FrameLayout>
